{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "foreground": "#5fa3d5",
                    "style": "plain",
                    "template": "{{ if ne .AbsolutePWD .PWD }}{{ else }}\u007E {{ end }}{{ .Path }} ",
                    "type": "path"
                },
                {
                    "foreground": "#6c6c6c",
                    "properties": {
                        "branch_icon": ""
                    },
                    "style": "plain",
                    "template": "{{ .HEAD }}",
                    "type": "git"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "right",
            "segments": [
                {
                    "foreground": "#6c6c6c",
                    "properties": {
                        "time_format": "15:04:05"
                    },
                    "style": "plain",
                    "template": "{{ .CurrentDate | date .Format }}",
                    "type": "time"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "#c47fd5",
                    "properties": {
                        "always_enabled": true
                    },
                    "style": "plain",
                    "template": "\u276F ",
                    "type": "status"
                }
            ],
            "type": "prompt"
        }
    ],
    "version": 2
}